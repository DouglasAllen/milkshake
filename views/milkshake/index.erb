<h2>Sitemap</h2>
<%= link_to "/new/page","+ Page",:class=>"milkshake-button" if admin? %>
<% unless @pages.empty? %>
<ul id="pages" class="milkshake-pages">

<% @pages.each do |page| %>
<%= erb(:'milkshake/_page',{:layout=>false},{:page=>page}) %>
<% end %>
</ul>
<% else %>
<P>There are no pages yet!</p>
<% end %>

