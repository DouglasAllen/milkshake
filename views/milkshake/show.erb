<% if @page.show_title %>
<h1><%= @page.title %></h1>
<% end %>

<%= shakedown(@page.content).gsub('h1>','h3>').gsub('h2>','h4>') %>


<% if admin? %>
<%= link_to @page.edit_path,"[Edit this Page]" %>
<%= link_to @page.new_sibling_path,"[+ Sibling Page]" %>
<%= link_to @page.new_child_path,"[+ Child Page]" %>
<%= link_to @page.delete_path,"[Delete this Page]" %>
<% end %>
