<li id="page_<%= page.id %>" class="page">
<%= link_to page.path,page.title %>
<%= "<span class=\"draft\">DRAFT</span>" unless page.published? %>

<% if admin? %>
<div class="edit-buttons">
<%= link_to page.edit_path,"EDIT" %>
<%= link_to page.new_child_path,"+ PAGE" %>
<%= link_to page.delete_path,"DELETE" %>
</div>
<% end %>

<% unless page.children.empty? %>
<ul class="pages">
<% admin? ? children = page.children : children = page.children.published %>

<% children.each do |child| %>
<%= erb(:'milkshake/_page',{:layout=>false},{:page=>child}) %>
<% end %>

</ul>
<% end %>
</li>
