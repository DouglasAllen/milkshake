<% if @page.show_title %>
<h1><%= @page.title %></h1>
<% end %>

<%= shakedown(@page.content).gsub('h1>','h3>').gsub('h2>','h4>') %>


<% if admin? %>
<%= link_to "/page/#{@page.id}","[Edit this Page]" %>
<%= link_to "/new/page/#{@page.id}?section=#{@page.parent_id}","[+ Sibling Page]" %>
<%= link_to "/new/page/#{@page.id}?section=#{@page.id}","[+ Child Page]" %>
<%= link_to "/page/#{@page.id}/delete","[Delete this Page]" %>
<% end %>
