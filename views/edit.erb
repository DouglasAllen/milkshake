<form action="/page/<%= @page.id %>" method="post">
<input type="hidden" name="_method" value="put" />
<%= render_partial :form,{ :page => @page } %>
</form>

<div id="page_info">
<h3>Page Info:</h3>
<p>
<% if @page.published_on %>
Published on <%= @page.published_on.strftime("%d %B %Y") %>
<% else %>
DRAFT - Not published.
<% end %>
</p>
<p>
Permalink: <%= @page.permalink %>
</p>
<p>
Path: <%= @page.path %>
</p>
<p>
Level: <%= @page.level %>
</p>
<p>
Position: <%= @page.position %>
</p>
<%= link_to "/admin","Cancel" %>
</div>

